@model SurveyQuestionsConfigurator.Entities.SliderQuestion

@{
    ViewBag.Title = SurveyQuestionsConfigurator.Entities.Resources.LanguageStrings.Details;
}
<h2>@SurveyQuestionsConfigurator.Entities.Resources.LanguageStrings.Details</h2>
<hr />
<div class="row">
    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.Order, htmlAttributes: new { @class = "" })
            @Html.DisplayFor(model => model.Order)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "" })
            @Html.DisplayFor(model => model.Text)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.StartValueCaption, htmlAttributes: new { @class = "" })
            @Html.DisplayFor(model => model.StartValueCaption)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.StartValue, htmlAttributes: new { @class = "" })
            @Html.DisplayFor(model => model.StartValue)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.EndValueCaption, htmlAttributes: new { @class = "" })
            @Html.DisplayFor(model => model.EndValueCaption)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.EndValue, htmlAttributes: new { @class = "" })
            @Html.DisplayFor(model => model.EndValue)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.ActionLink(SurveyQuestionsConfigurator.Entities.Resources.LanguageStrings.Edit, "Edit", new { id = Model.ID, type = Model.Type }, htmlAttributes: new { @class = "btn btn-success btn-sm" }) |
            @Html.Partial("_BackToListPartial")
        </div>
    </div>

</div>


