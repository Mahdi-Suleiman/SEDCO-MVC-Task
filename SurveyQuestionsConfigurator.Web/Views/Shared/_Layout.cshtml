<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)



</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Questions")" class="navbar-brand">
                    <img src="/assets/sedco_logo.png" alt="website logo" width="65" height="21" />
                </a>
                @*@Html.ActionLink("Survey Questions Configurator", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "background-image:url('/assets/sedco_logo.png')" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li>@Html.ActionLink(SurveyQuestionsConfigurator.Entities.Resources.LanguageStrings.Questions, "Index", "Questions")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <img src="~/assets/settings.png" alt="settings" height="20" width="20" />
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href=@Url.Action("Index","Connection")>Connection</a></li>
                            @*<li><a href="#">Langauge</a></li>*@
                        </ul>
                    </li>
                </ul>


                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <img src="~/assets/language.png" alt="langauge" height="20" width="20" />
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">
                                    <span style="margin-right: 4px"><img src="~/assets/english.png" alt="langauge" height="20" width="20" /></span>
                                    @SurveyQuestionsConfigurator.Entities.Resources.LanguageStrings.English
                                </a></li>
                            <li><a href="#"><span style="margin-right: 4px"><img src="~/assets/arabic.png" alt="langauge" height="20" width="20" /></span>
                                @SurveyQuestionsConfigurator.Entities.Resources.LanguageStrings.Arabic
                                </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }
        else if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Survey Questions Configurator</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @*@RenderSection("scripts", required: false)*@
</body>
</html>
