@model SurveyQuestionsConfigurator.Entities.Question

@{
    ViewBag.Title = "DisabledEdit";
}

<h2>DisabledEdit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Question</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Order, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.Order, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
        @Html.ValidationMessageFor(model => model.Order, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div>
            <input type="submit" value="@SurveyQuestionsConfigurator.Entities.Resources.LanguageStrings.Save" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        @Html.Partial("_BackToListPartial")
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
