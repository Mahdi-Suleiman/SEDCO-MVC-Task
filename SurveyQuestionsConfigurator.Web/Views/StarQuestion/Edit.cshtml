@model SurveyQuestionsConfigurator.Entities.StarQuestion

@{
    ViewBag.Title = $"{SurveyQuestionsConfigurator.Entities.Resources.LanguageStrings.Edit}";
}

<h2>@SurveyQuestionsConfigurator.Entities.Resources.LanguageStrings.Edit</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        @Html.Partial("_EditQuestion", @Model)
        @Html.Partial("_CreateStarQuestion", @Model)

        <div class="form-group">
            <div>
                <input type="submit" value="@SurveyQuestionsConfigurator.Entities.Resources.LanguageStrings.Save" class="btn btn-success" />
            </div>
        </div>

        <div class="form-group">
            @Html.Partial("_BackToListPartial")
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
